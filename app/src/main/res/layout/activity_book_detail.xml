<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".ui.BookDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:title="Detail Book"
            app:titleTextColor="@color/black"
            app:navigationIcon="@drawable/ic_arrow_back_24"
            app:menu="@menu/bookmarks_mylib_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_blurry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:alpha="0.7"
            android:src="@drawable/sample_book"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_detail"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:src="@drawable/sample_book"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/img_blurry" />

        <TextView
            android:id="@+id/txTitleDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resistere superbe ducunt ad raptus ignigena.Ecce, epos!Est salvus luna, cesaris."
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingHorizontal="16dp"
            android:layout_marginVertical="8dp"
            app:layout_constraintTop_toBottomOf="@id/img_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="by Cur tata peregrinationes?"
            android:textAlignment="center"
            android:textSize="12sp"
            android:paddingHorizontal="16dp"
            android:layout_marginVertical="8dp"
            app:layout_constraintTop_toBottomOf="@id/txTitleDetail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txSect1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Section 1"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/img_blurry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txSect2"/>
        <TextView
            android:id="@+id/txSect2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Section 2"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/img_blurry"
            app:layout_constraintStart_toEndOf="@id/txSect1"
            app:layout_constraintEnd_toEndOf="@id/txSect3"/>
        <TextView
            android:id="@+id/txSect3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Section 3"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/img_blurry"
            app:layout_constraintStart_toEndOf="@id/txSect2"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txSect1b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="769"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/txSect1"
            app:layout_constraintStart_toStartOf="@id/txSect1"
            app:layout_constraintEnd_toEndOf="@id/txSect1"/>
        <TextView
            android:id="@+id/txSect2b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/txSect2"
            app:layout_constraintStart_toStartOf="@id/txSect2"
            app:layout_constraintEnd_toEndOf="@id/txSect2"/>
        <TextView
            android:id="@+id/txSect3b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="765"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/txSect3"
            app:layout_constraintStart_toStartOf="@id/txSect3"
            app:layout_constraintEnd_toEndOf="@id/txSect3"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="After draining the meatloafs, soak okra, pumpkin seeds and rice vinegar with it in a casserole.Combine onion, sauerkraut and pork butt. marinate with packaged dill and serve scraped with eggs. Enjoy!After draining the meatloafs, soak okra, pumpkin seeds and rice vinegar with it in a casserole.Combine onion, sauerkraut and pork butt. marinate with packaged dill and serve scraped with eggs. Enjoy!After draining the meatloafs, soak okra, pumpkin seeds and rice vinegar with it in a casserole.Combine onion, sauerkraut and pork butt. marinate with packaged dill and serve scraped with eggs. Enjoy!"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txSect1b" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>